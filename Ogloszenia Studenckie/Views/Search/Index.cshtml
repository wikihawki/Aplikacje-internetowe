
@{
    ViewBag.Title = "Wyniki Wyszukiwania";
}
<style>
.news{
  padding:40px;
  display:inline-block;
}

.offer {
    width: 100%;
    height: 150px;
    position: relative;
    overflow: hidden;
    margin:16px;
    background:white;
    border-radius: 75px;
    text-align:center;
    border:1px solid #e3e3e3;
    float:left;
}
    .offer:hover {
    background:#e3e3e3;
    text-decoration:none;
    }
.image-rounder-offer {
    width: 144px;
    height: 144px;
    float:left;
    border:2px solid #e3e3e3;
    margin:2px;   
    
    position: relative;
    overflow: hidden;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
}
.rounded-image {
    display: inline;
    margin: 0 auto;
    height: 100%;
   position: absolute;
  left: 50%;
  top: 50%;
   -webkit-transform: translate(-50%,-50%);
      -ms-transform: translate(-50%,-50%);
          transform: translate(-50%,-50%);
}
.name{
  border-bottom: 1px solid #e3e3e3;
  font-size:16px;
   display:block;
   margin-top:5px;
   font-weight:bold;
   background:#999999;
   color:#ffffff;
   margin-left:60px;
   margin-right:60px;
}
.offer-contnet{
  height:100%;
  width:100%;
}
.price{
  background:#e3e3e3;
  padding-bottom:20px;
  font-size:150%;
  height:100%;
  width: 150px;
  float:right;
  padding-top:60px;
}
    .offer-disc {
    color:#999999;
    }

    #schools-links ,
    #cities-links{
    max-height:1008px;
    overflow:auto;
    }
}
</style>
<div class="panel-title text-center"><h2>@Html.ActionLink("Wszystkie", "Index", "Search") > [Kategoria] > [Podkategoria] > [Fraza]</h2></div> <!-- Na podstawie parametrów widoku, to co w [] nieobowiązkowe -->

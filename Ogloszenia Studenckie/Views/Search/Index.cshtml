<script>
    function filterList() {
        var regions, filterReg, cities, filterCit, citiesList, city, i, schools, schoolsList, school, abbre, name, id, filterSch;

        regions = document.getElementById("region-select");
        filterReg = regions.value;
        cities = document.getElementById("cities-select");
        filterCit = cities.value;
        citiesList = cities.getElementsByTagName("option");
        for (i = 0; i < citiesList.length; i++) {
            city = citiesList[i].value;
            if ((city - filterReg * 100 < 100 && city - filterReg * 100 > 0) || filterReg == 0) {
                citiesList[i].style.display = "";
            } else {
                citiesList[i].style.display = "none";
            }
        }
        schoolsList = document.getElementById("schools-links").getElementsByTagName("a");
        schools = document.getElementById("school-name");
        filterSch = schools.value.toUpperCase();
        for (i = 0; i < schoolsList.length; i++) {
            school = schoolsList[i].getElementsByTagName("li")[0];
            abbre = school.innerHTML.toUpperCase();
            name = school.title.toUpperCase();
            id = school.value;
            if (
            (name.indexOf(filterSch) > -1 || abbre.indexOf(filterSch) > -1) &&
            ((id - filterReg * 10000 < 10000 && id - filterReg * 10000 > 0) || filterReg == 0) &&
            ((id - filterCit * 100 < 100 && id - filterCit * 100 > 0) || filterCit == 0)
            ) schoolsList[i].style.display = "";
            else schoolsList[i].style.display = "none";
        }
    }
</script>
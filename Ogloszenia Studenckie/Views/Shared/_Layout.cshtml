<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body >
    <nav class="navbar navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ogłoszenia studenckie", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li>
                        <div style="display:inline-block; padding:8px">
                            @Html.ActionLink("Dodaj Swoje ogłoszenie", "Contact", "Home", null, new { @class = "btn btn-default" })
                        </div>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    
    <div class="container body-content">
        <div class="page-header" style="margin-top:-5px; ">
            <form class="form-inline well well-sm" style="margin-bottom:-5px;">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Szukaj">
                    <div class="input-group-addon" style="padding:0;border:0; width:160px">
                        <select class="form-control " id="sel1">
                            <option>Wszystkie kategorie</option>
                            <option>Kategoria 1</option>
                            <option>Kategoria 2</option>
                            <option>Kategoria 3</option>
                            <option>Kategoria 4</option>
                        </select>
                    </div>
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
              </form>
            <div class="well panel-group" id="acc" style="margin:0px;padding-bottom:0px;padding-top:0px; text-align: center;">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                Studia
                                
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Akademiki</a></li>
                                <li><a href="#">Pokoje do wynajęcia</a></li>
                                <li><a href="#">Inne</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2"> 
                        <div class="dropdown">
                              <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                              
                              Kwaterunek
                              </button>
                              <ul class="dropdown-menu">
                                <li><a href="#">Akademiki</a></li>
                                <li><a href="#">Pokoje do wynajęcia</a></li>
                                <li><a href="#">Inne?</a></li>
                              </ul>
                        </div> 
                    </div>
                    <div class="col-sm-2">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                Social
                                
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Akademiki</a></li>
                                <li><a href="#">Pokoje do wynajęcia</a></li>
                                <li><a href="#">Inne?</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" style="display:inline-block">
                                Sprzedam
                                
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Akademiki</a></li>
                                <li><a href="#">Pokoje do wynajęcia</a></li>
                                <li><a href="#">Inne?</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                Kwaterunek
                                
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Akademiki</a></li>
                                <li><a href="#">Pokoje do wynajęcia</a></li>
                                <li><a href="#">Inne?</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                Inne
                                
                            </button>
                            <ul class="dropdown-menu ">
                                <li><a href="#">Akademiki</a></li>
                                <li><a href="#">Pokoje</a></li>
                                <li><a href="#">Inne?</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

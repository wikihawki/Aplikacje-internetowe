
@{

    string nazwa = "Super rover";
    string opis = "Rower taki zajebisty że aż kutasy lecą z nieba, a dalej jest tekst piosenki żeby pokazać co się dzieje jak jest za dużo tekstu Wciąż ubierasz się na szaro<br> Szarą szminką zdobisz ciało Kocham cię pod szarym niebem Oddychamy szarym tlenem<br> Szary koniec i początek<br> Szary wtorek szary piątek<br> Szare myśli nad głowami<br> Szary spokój między nami";
    int cena = 100000;
    string miasto = "Warszawa";
    string uczel = "Wojskowa Akademia Techniczna";
    string[] obrazy = new string[4]
    {
        "http://www.electricvelocity.com.au/Upload/Blogs/smart-e-bike-side_2.jpg",
        "https://roweroweporady.pl/wp-content/uploads/2014/11/noski-do-pedalow.jpg",
        "http://images.elektrobike-online.com/sixcms/media.php/6/UB_Smart_eBike_797670_1464205_7216_5412_10C1062_08_seitl.jpg",
        "http://www.zercustoms.com/news/images/Smart/smart-ebike-5.jpg"
    };
    ViewBag.Title = nazwa;
}@*zamiast tego będzie model *@



<style>



.modal {
    display: none;
    position: fixed; 
    z-index: 1; 
    padding-top: 100px; 
    left: 0;
    top: 0;
    width: 100%; 
    height: 100%; 
    overflow: auto; 
    background-color: rgb(0,0,0); 
    background-color: rgba(0,0,0,0.9); 
}

.modal-content {
    margin: auto;
    display: block;
    width: auto;
    max-width: 100%;
}


.close {
    position: absolute;
    top: 55px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    transition: 0.3s;
}

.close:hover,
.close:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
}
    .alt-link {
    color:#e3e3e3;
    }
    .modal-link {
    cursor:pointer;
    }
}
</style>
<h2 class="text-center">@nazwa</h2>
<div id="myModal" class="modal">
    <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>
    <img class="modal-content" id="img01">
</div>

<div class="well">
    <div class="row">
        <div class="col-md-7">
            @if (obrazy.Length > 0)
            {<img id="myImg" src="@obrazy[0]" class="modal-link img-rounded img-responsive" onclick="showModal(this.src)">}
            
        </div>
                    
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>@cena zł</h4>
                </div>
                <div class="panel-body">
                    Numer kontaktowy: 0 700 880<br>
                    E-mail kontaktowy: adres@domena.pl<br /><br />
                    Dodano: 25.02.2054
                </div>
                <div class="panel-footer">
                @uczel - @miasto
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>@Html.ActionLink("Wszystkie", "Index", "Search", null, new { @class = "alt-link" }) > [Kategoria] > [Podkategoria] > [Fraza]</h4>
        </div>
        <div class="panel-body">
            @Html.Raw(opis);
        </div>
        <center class="panel-footer">
            @if (obrazy.Length > 0) {<h4>Galeria</h4> }
            @for (int i = 0; i < obrazy.Length; i++)
            {
                <img id="myImg" src="@obrazy[i]" class="modal-link img-rounded" onclick="showModal(this.src)" style="max-width:30%; display:inline-block">
            }
        </center>

    </div>
</div>


            <script>
                function showModal(image) {
                var modal;
                modal = document.getElementById('myModal');
                modal.style.display = "block";
                document.getElementById('img01').src = image;
            }

            </script>

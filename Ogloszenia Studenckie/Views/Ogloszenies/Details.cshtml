@model Ogloszenia_Studenckie.Ogloszenie


@{

    string nazwa = Model.Tytul;
    string opis = Model.Opis;
    var cena = Model.Cena;
    string miasto = Model.Miasto.Nazwa;
    string uczel = Model.Uczelnia.Nazwa;
    List<String> obrazy = ViewBag.images;
    ViewBag.Title = nazwa;
}



<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 100px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.9);
    }

    .modal-content {
        margin: auto;
        display: block;
        width: auto;
        max-width: 100%;
    }


    .close {
        position: absolute;
        top: 55px;
        right: 35px;
        color: #f1f1f1;
        font-size: 40px;
        font-weight: bold;
        transition: 0.3s;
    }

        .close:hover,
        .close:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }

    .alt-link {
        color: #e3e3e3;
    }

    .modal-link {
        cursor: pointer;
    }

    }
</style>
<h2 class="text-center">@nazwa</h2>
<div id="myModal" class="modal">
    <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>
    <img class="modal-content" id="img01">
</div>

<div class="well">
    <div class="row">
        <div class="col-md-7">
            @if (obrazy.Count > 0)
            {<img id="myImg" src="@obrazy.ElementAt(0)" class="modal-link img-rounded img-responsive" onclick="showModal(this.src)">}

        </div>

        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>@cena zł</h4>
                </div>
                <div class="panel-body">
                    Numer kontaktowy: @Model.Konto.Telefon<br>
                    E-mail kontaktowy: @Model.Konto.E_Mail<br /><br />
                    Dodano: @Model.Data_Zamieszczenia
                </div>
                <div class="panel-footer">
                    @uczel - @miasto
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>@Html.ActionLink("Wszystkie", "Index", "Search", null, new { @class = "alt-link" }) > <a href="@Url.Action("Index","Ogloszenies")?kat=1">Studia</a> > <a href="@Url.Action("Index","Ogloszenies")?kat=2">Notatki</a></h4>

        </div>
        <div class="panel-body">
            @Html.Raw(opis);
        </div>
        <center class="panel-footer">
            @if (obrazy.Count > 0)
            {<h4>Galeria</h4> }
            @for (int i = 0; i < obrazy.Count; i++)
            {
                <img id="myImg" src="@obrazy.ElementAt(i)" class="modal-link img-rounded" onclick="showModal(this.src)" style="max-width:30%; display:inline-block">
            }
        </center>

    </div>
</div>


<script>
                function showModal(image) {
                var modal;
                modal = document.getElementById('myModal');
                modal.style.display = "block";
                document.getElementById('img01').src = image;
            }

</script>
